h3
  ="Hello, #{@user.name}"
h4
  ="#{@answer.question.user.name} accepted your answer"
p
  -if @answer.contents.length > 40
    = "#{@answer.contents.first(40)}..."
  -else
    = "#{@answer.contents}"
br  
  = "Link to this question: "
  = link_to @answer.question.title, question_url(@answer.question)
